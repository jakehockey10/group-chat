<div class="media">
  <div class="media-left">
    <%= image_tag avatar_url(message.user), size: '50x50' %>
  </div>
  <div class="media-body">
    <h4 class="media-heading">
      <%= message.user.username %> |
      <small><%= message.sentiment %> (<%= message.score %>)</small> |
      <small><%= sent_at_for(message) %></small>
    </h4>
    <p><%= message.body %></p>
  </div>
</div>